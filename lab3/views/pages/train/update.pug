extends ../../layout

block content
  div(class='col-md-6')
    form(id='train-edit-form' name='train-edit-form' class='form-horizontal' method="POST" action='')
      input(id='id' name='id' value=$fn.getPropOrDefault(newTrain, 'id', train.id) type='hidden')
      div(class='form-group')
        div(class='col-md-3')
          label(for='name') Name
        div(class='col-md-9')
          input(id='name' name='name' value=$fn.getPropOrDefault(newTrain, 'name', train.name) class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='number') Number
        div(class='col-md-9')
          input(id='number' name='number' value=$fn.getPropOrDefault(newTrain, 'passport_number', train.number) class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='route') Route
        div(class='col-md-9')
          input(id='route' name='route' value=$fn.getPropOrDefault(newTrain, 'route', train.route) class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='places') Places
        div(class='col-md-9')
          input(id='places' name='places' value=$fn.getPropOrDefault(newTrain, 'places', train.places) class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Update
